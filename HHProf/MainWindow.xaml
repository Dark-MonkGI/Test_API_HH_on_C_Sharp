<Window x:Name="HHProfMain" x:Class="HHProf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HHProf"
        mc:Ignorable="d"
        Title="HH Professional" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="235*"/>
            <ColumnDefinition Width="157*"/>
        </Grid.ColumnDefinitions>
        <Menu Height="25" VerticalAlignment="Top" x:Name="navbar" Grid.ColumnSpan="8" Background="#FFB10404">
            <MenuItem Header="Vacancy"></MenuItem>
            <MenuItem Header="Resume">
                <MenuItem Header="Resume List"></MenuItem>
                <MenuItem Header="Add">
                    <MenuItem Header="New"></MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Test"></MenuItem>
        </Menu>
    </Grid>
</Window>
